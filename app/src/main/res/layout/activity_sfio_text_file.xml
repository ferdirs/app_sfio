<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SfioTextFile"
    android:background="@color/grey">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_sistema"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:src="@drawable/sistema"/>


        <TextView
            android:id="@+id/encblock"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@color/white"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/iv_sistema"
            android:text="Encrypt Existing File"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:padding="10dp"/>

        <EditText
            android:id="@+id/et_pass_enc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/iv_sistema"
            android:layout_marginTop="40dp"
            android:hint="Input Password"
            />

        <TextView
            android:id="@+id/timerEnc_TextFile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/et_pass_enc"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="ASASAS"
            android:layout_margin="10dp"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/bt_enc_file"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/et_pass_enc"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="10dp"
            android:background="@color/red"
            android:text="Encrypt"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/updateblock"
            android:layout_width="match_parent"
            android:layout_height="210dp"
            app:layout_constraintTop_toBottomOf="@+id/encblock"
            android:background="@color/white"
            android:layout_marginTop="10dp"
            android:text="Updating"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:padding="10dp"
            />

        <EditText
            android:id="@+id/et_up_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/encblock"
            android:layout_marginTop="50dp"
            android:hint="Input Text Update"
        />

        <EditText
            android:id="@+id/et_up_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/et_up_text"
            android:hint="Input Update Password"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:id="@+id/timerPass_TextFile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/et_up_pass"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="ASASAS"
            android:layout_margin="10dp"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/bt_updating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/et_up_pass"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="10dp"
            android:text="Update"
            android:background="@color/red"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/decblock"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@color/white"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/updateblock"
            android:text="Decrypt Existing File"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:padding="10dp"/>

        <EditText
            android:id="@+id/et_pass_dec"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/updateblock"
            android:layout_marginTop="40dp"
            android:hint="Input Password"
            />

        <TextView
            android:id="@+id/timerDec_TextFile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/et_pass_dec"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="ASASAS"
            android:layout_marginTop="50dp"
            tools:ignore="MissingConstraints" />
        
        <Button
            android:id="@+id/bt_dec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/et_pass_dec"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="10dp"
            android:background="@color/red"
            android:textColor="@color/white"
            android:text="Decrypt"
            />
        
        <TextView
            android:id="@+id/tv_dec_res"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/et_pass_dec"
            tools:hint="FAFAFAFA"
            android:layout_margin="10dp"
            tools:ignore="MissingConstraints" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>